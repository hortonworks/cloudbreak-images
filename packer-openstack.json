{
  "variables": {
    "mock": "{{ env `MOCK` }}",
    "atlas_token": "{{ env `ATLAS_TOKEN`}}",
    "atlas_artifact": "cloudbreak",

    "os_user": "cloudbreak",

    "os_auth_url": "{{ env `OS_AUTH_URL` }}",
    "os_image_name": "cb-centos71-amb221-{{ isotime \"2006-01-02\" }}{{env `IMAGE_NAME_SUFFIX`}}",
    "os_username": "{{ env `OS_USERNAME` }}",
    "os_password": "{{ env `OS_PASSWORD` }}",
    "os_tenant_name": "{{ env `OS_TENANT_NAME` }}"
  },
  "builders": [
    {
      "type": "openstack",
      "username": "{{user `os_username`}}",
      "password": "{{user `os_password`}}",
      "tenant_name": "{{user `os_tenant_name`}}",
      "ssh_username": "centos",
      "ssh_pty": "true",
      "image_name": "{{user `os_image_name`}}",
      "source_image": "ac3d6c6f-b139-4d1f-a86f-5b0821271984",
      "flavor": "m1.medium",
      "use_floating_ip": true,
      "floating_ip_pool": "8a1ca549-30cb-4fd5-9d32-84a42433558b",
      "networks": [
        "6414de5e-6085-4469-b8e9-aa293a65c828"
      ]
    }
  ],
  "provisioners": [
      {
        "type": "file",
        "source": "shared",
        "destination": "/tmp"
      },
      {
          "type": "shell",
          "inline": ["sudo rsync -a /tmp/shared/ /"]
      },
      {
        "type": "shell",
        "scripts": [
            "./pull-docker-images.sh",
            "./optimization-script-for-hdp.sh"
        ],
        "environment_vars": [
            "OS_USER={{ user `os_user` }}",
            "YUM_VERSION_DOCKER={{ user `yum_version_docker` }}",
            "YUM_VERSION_KERNEL={{ user `yum_version_kernel` }}",
            "YUM_VERSION_SYSTEMD={{ user `yum_version_systemd` }}",
            "IMAGES={{ user `cb_docker_container_ambari_base` }} {{ user `cb_docker_container_docker_consul_watch_plugn` }} {{ user `cb_docker_container_registrator` }} {{ user `cb_docker_container_logrotate` }} {{ user `cb_docker_container_kerberos` }} {{ user `cb_docker_container_ambari_db` }} {{ user `cb_docker_container_munchausen` }} {{ user `cb_docker_container_consul` }} {{ user `cb_docker_container_gateway` }} {{ user `cb_docker_container_alpine` }} {{ user `cb_docker_container_swarm` }} {{ user `cb_docker_container_cert_tool` }} {{ user `cb_docker_container_haveged` }} {{ user `cb_docker_container_list_others` }}",
            "TRACE=1"
        ],
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'"
      }
  ]

  ,"post-processors": [
      [
        {
            "type":"generator",
            "Template": "execute.tmpl",
            "Output": "./execute.sh"
        }
       ,{
        "type": "artifice",
        "files": ["{{ user `os_image_name` }}.img"]
      }
      ,{
        "type": "atlas",
        "token": "{{user `atlas_token`}}",
        "artifact": "sequenceiq/{{ user `atlas_artifact` }}",
        "artifact_type": "openstack.image",
        "metadata": {
            "created_at": "{{timestamp}}",
            "created" :"{{ isotime \"2006-01-02 15:04:05 -0700\" }}",
            "cloudbreak_image_version": "{{ user `cloudbreak_image_version` }}",
            "image_name": "{{ user `os_image_name` }}",
            "yum_version_systemd": "{{ user `yum_version_systemd` }}",
            "yum_version_docker": "{{ user `yum_version_docker` }}",
            "yum_version_kernel": "{{ user `yum_version_kernel` }}",
            "all_docker_images":"{{ .Config.PackerUserVars.cb_docker_container_ambari_base }},{{ user `cb_docker_container_docker_consul_watch_plugn` }},{{ user `cb_docker_container_registrator` }},{{ user `cb_docker_container_logrotate` }},{{ user `cb_docker_container_kerberos` }},{{ user `cb_docker_container_ambari_db` }},{{ user `cb_docker_container_munchausen` }},{{ user `cb_docker_container_consul` }},{{ user `cb_docker_container_gateway` }},{{ user `cb_docker_container_alpine` }},{{ user `cb_docker_container_swarm` }},{{ user `cb_docker_container_cert_tool` }},{{ user `cb_docker_container_haveged` }},{{ user `cb_docker_container_list_others` }}"
        }
      }
      ],
      [
                {
      "type":"generator",
      "template":"openstack.tmpl",
      "output":"openstack.yml"
          }
          ,{
            "type": "atlas",
            "token": "{{user `atlas_token`}}",
            "artifact": "sequenceiq/{{ user `atlas_artifact` }}",
            "artifact_type": "openstack.yml",
            "metadata": {
                "cloudbreak_image_version": "{{ user `cloudbreak_image_version` }}",
                "created_at": "{{timestamp}}",
                "created" :"{{ isotime \"2006-01-02 15:04:05 -0700\" }}"
            }
          }
      ]
    ]
}
