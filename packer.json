    "atlas_artifact": "cloudbreak",
    "image_name": "cb-{{ isotime \"2006-01-02-15-04\" }}{{env `IMAGE_NAME_SUFFIX`}}",

    "instance_type": "m3.medium",
    "ami-eu-west-1": "ami-c39604b0"
  },
  "builders":[
  {
    "name": "amazon",
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "ami_regions": ["ap-southeast-1","ap-southeast-2","eu-central-1","ap-northeast-1","ap-northeast-2","us-east-1","sa-east-1","us-west-1","us-west-2"],
    "ssh_pty" : true,
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "{{user `ami-eu-west-1`}}",
    "instance_type": "{{ user `instance_type` }}",
    "ssh_username": "ec2-user",
    "enhanced_networking": true,
    "ami_block_device_mappings": [{
                 "device_name": "/dev/xvda",
                 "volume_type": "gp2",
                 "delete_on_termination": true,
                 "volume_size": 15
            }],
    "launch_block_device_mappings": [{
                "device_name": "/dev/xvda",
                "volume_type": "gp2",
                "delete_on_termination": true,
                "volume_size": 15
            }],
    "tags": {
      "builder": "packer",
      "version": "{{user `version`}}"
    },
    "ami_groups" :"all",
    "ami_name": "{{ user `image_name`}}"
  },
  {
    "disk_size": "40",
    "name": "googlecompute",
    "type": "googlecompute",
    "account_file": "{{user `gcp_account_file`}}",
    "source_image": "centos-7-v20150603",
    "zone": "us-central1-b",
    "project_id": "siq-haas",
    "ssh_username": "centos",
    "ssh_pty": "true",
    "machine_type": "n1-standard-2",
    "image_name": "{{user `image_name`}}",
    "tags": [
	"packer"
    ]
  },
    {
      "type": "openstack",
      "username": "{{user `os_username`}}",
      "password": "{{user `os_password`}}",
      "tenant_name": "{{user `os_tenant_name`}}",
      "ssh_username": "centos",
      "ssh_pty": "true",
      "image_name": "{{user `image_name`}}",
      "source_image": "c1632189-f509-4dba-ac1a-b08b07920b6d",
      "flavor": "3",
      "use_floating_ip": false,
      "networks": [
        "6414de5e-6085-4469-b8e9-aa293a65c828"
      ]
    }
    ,{
        "type": "azure-arm",

        "client_id": "{{user `client_id`}}",
        "client_secret": "{{user `client_secret`}}",
        "subscription_id": "{{user `subscription_id`}}",
        "tenant_id": "{{user `tenant_id`}}",

        "resource_group_name": "{{user `resource_group_name`}}",
        "storage_account": "{{user `storage_account`}}",

        "capture_container_name": "packer",
        "capture_name_prefix": "{{ user `image_name`}}",

        "image_publisher": "OpenLogic",
        "image_offer": "CentOS",
        "image_sku": "7.1",
        "ssh_pty": "true",
        "username": "{{user `os_user`}}",
        "ssh_password" :"{{user `ssh_password`}}",

        "location": "northeurope",
        "vm_size": "Standard_D4"
    }


  ],
  "provisioners": [
  {
    "type": "file",
    "source": "shared",
    "destination": "/tmp"
  },
  {
      "type": "shell",
      "execute_command": "sudo -S true <<< '{{ user `ssh_password`}}' ; chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'",
      "scripts": ["./fix-waagent-sudo.sh"]
  },
  {
      "type": "shell",
      "inline": [
          "sudo yum install -y rsync",
          "sudo chown -R root:root /tmp/shared",
          "sudo rsync -a /tmp/shared/pre/ /"
      ]
  },
  {
    "type": "shell",
    "scripts": [
        "./user-data-script.sh"
    ],
    "environment_vars": [
        "OS_USER={{ user `os_user` }}",
        "PACKER_IMAGE_NAME={{user `image_name`}}",
        "TRACE=1",
        "HDP_VERSION={{user `hdp_version`}}"
    ],
    "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E bash '{{ .Path }}'"
  },
  {
    "type": "shell",
    "inline": [
      "sudo chown -R root:root /tmp/shared",
      "sudo rsync -a /tmp/shared/post/ /"
    ]
  }
  ]
  ,"post-processors": [
    {
      "type": "atlas",
      "artifact": "sequenceiq/{{ user `atlas_artifact` }}",
      "artifact_type": "{{ build_name }}.image",
      "metadata": {
        "created_at": "{{timestamp}}",
        "created" :"{{ isotime \"2006-01-02 15:04:05 -0700\" }}",
        "os_user": "{{user `os_user` }}",
        "orchestrator": "salt",
        "image_name": "{{ user `image_name` }}",
      }
    }
  ]

}
