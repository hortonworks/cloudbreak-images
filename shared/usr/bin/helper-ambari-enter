#!/bin/bash
ambari-enter() {
  declare desc="Enters the ambari container"

  local id=$(docker ps | grep 'hortonworks/ambari-' | cut -d' ' -f 1)
  cat 1>&2 <<EOF
---> You are entering the ambari container:
---> [COMMAND] docker exec -it $id bash

EOF

  docker exec -it $id bash
}

main() {
    ambari-enter
}

[[ "$0" == "$BASH_SOURCE" ]] && main "$@"
